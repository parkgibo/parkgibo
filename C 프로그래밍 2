	{if((exp)<=100)\
		{printf("원의 면적을 계산할 수가 없습니다."), exit(1); }}


double area(double radius)
{
	double result = 0.0;
#ifdef DEBUG
#ifdef USA
	printf("area(%f) is called \n", radius);

#else 
	printf(printf("area(%f)가 호출되었음",radius);
#endif
#endif
		result = PI * SQUARE(radius);
	return result;

}
int main(void) 
